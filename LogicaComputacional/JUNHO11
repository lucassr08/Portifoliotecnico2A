package manupulacao.de.string;

import javax.swing.JOptionPane;

public class ManupulacaoDeString {

    public static void main(String[] args) {
      String nome = (JOptionPane.showInputDialog("Digite Seu Nome!"));
        JOptionPane.showMessageDialog(null, "seu nome é" +nome);
        
        int idade = Integer.parseInt(JOptionPane.showInputDialog("digite seu ano de nascimento!"));
        int idadeAtual = 2021 - idade;
        nome = nome+ " sua idade é " +idadeAtual; 
        JOptionPane.showMessageDialog(null, nome);
    
    }
    
}
